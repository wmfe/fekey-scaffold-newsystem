<div class="modal <#if(fade){#>fade<#}#> common-widget-dialog" tabindex="-1" role="dialog" data-backdrop="<#=backdrop#>" data-keyboard="<#=keyboard#>">
  <div class="modal-dialog <#=modalSize#>">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-node="close_btn" title="点击关闭"><span aria-hidden="true">&times;</span></button>
      	<h5 class="modal-title" data-node="modal_title"></h5>
      </div>
      <div class="modal-body" data-node="modal_body">
      </div>
      <div class="modal-footer" data-node="modal_footer">
      	<button class="btn btn-primary ok" type="button" data-node="ok_btn">确定</button>
      	<button class="btn btn-default cancel" type="button" data-node="cancel_btn">取消</button>
      </div>
    </div>
  </div>
</div>